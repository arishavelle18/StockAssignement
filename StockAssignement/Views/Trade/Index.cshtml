@using StockAssignement.Models
@model StockTrade
@{
    ViewBag.Title = "Stocks";
}


<div class="container mx-auto flex-col">

    <div class="flex flex-row container mx-auto bg-semiWhiteColor py-10 mt-10 px-20">
        <div class="flex flex-col w-2/3 items-start justify-center">
            <div class="flex flex-col justify-center">
                <h3 class="text-xl font-bold">@Model.StockName (@Model.StockSymbol)</h3>
            </div>
            <div class="flex flex-row space-x-2 align-center">
                <span class="text-grayColor text-2xl">$</span>
                <h2 class="text-2xl font-bold">@Model.Price</h2>
            </div>
        </div>

        <div class="flex flex-col w-1/3 space-y-4 px-3">
            <form class="flex flex-col space-y-4 px-3" method="post">
                <div class="flex flex-col">
                    <h3 class="font-bold text-lg text-grayishColor">New Order</h3>
                    @if (ViewBag.Errors != null)
                    {
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="text-red-500">@error</li>
                            }
                        </ul>
                    }
                    else if (ViewBag.Success != null)
                    {
                        <p class="text-blue-500">@ViewBag.Success</p>
                    }

                </div>
                <div class="flex flex-col space-y-2">
                    <input type="hidden" name="StockSymbol" value="@Model.StockSymbol" />
                    <input type="hidden" name="StockName" value="@Model.StockName" />
                    <input type="hidden" name="Price" value="@Model.Price" />
                    <label for="Quantity">Quantity</label>
                    <input class="rounded-md border-0 px-2 py-2 w-52" type="number" min="0" placeholder="0.00" name="Quantity" id="Quantity" />
                    <input type="hidden" value="@(DateTime.Now)" name="DateAndTimeOfOrder" id="DateAndTimeOfOrder" />
                </div>
                <div class="flex flex-row space-x-10 ">
                    <button class="bg-redColor text-white px-5 py-1 rounded-lg" formaction="~/trade/sellorder">Sell</button>
                    <button class="bg-greenColor text-white px-5 py-1 rounded-lg" formaction="~/trade/buyOrder">Buy</button>
                </div>
            </form>

        </div>

    </div>

</div>